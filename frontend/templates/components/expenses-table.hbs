
<div>
  {{#if user.isLogged}} 
<h1>{{i18n 'Expenses'}}</h1>
<div id="expenses-table">
  {{#if expenses.length}}
    <table border="1">
      <thead>
      <tr>
        <th>{{i18n 'Type'}}</th>
        <th>{{i18n 'Date'}}</th>
        <th>{{i18n 'Quatity'}}</th>
        <th>{{i18n 'Description'}}</th>
        <th>{{i18n 'File'}}</th>
      </tr>
      </thead>

      <tbody>
      {{#each expenses}}

          {{#if_eq ../user.currentUser expense_owner}}

          <tr fronty-component="ExpenseRowComponent" key="{{id}}" model="expenses[{{@index}}]" id="item-{{id}}"></tr>
         {{/if_eq}}

      {{/each}}

    </tbody>
    </table>
  {{/if}}
  
</div>

  <a href='#add-expense'>{{i18n 'Add expense'}}</a>
{{/if}}
</div>
